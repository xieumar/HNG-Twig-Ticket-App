<script src="https://cdn.tailwindcss.com"></script>
{% include 'navbar.html.twig' with {'is_logged_in': is_logged_in} %}
{% if success %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline">{{ success }}</span>
    </div>
{% endif %}
{% if error %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline">{{ error }}</span>
    </div>
{% endif %}
<div class="flex flex-col min-h-screen items-center justify-center">
    <div class="max-w-md mx-auto mt-10 p-8 bg-white rounded-lg shadow-lg">
      <form action="/auth/login" method="POST"> {# action and method added for basic form submission #}
        <h2 class="text-3xl font-bold text-center mb-6">Login</h2>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
          <input type="email" id="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
          {# Client-side validation for email would be added here via JavaScript #}
          {# errors.email and authError will be handled by server-side logic or client-side JS #}
          {# {% if errors.email %}<p class="text-red-500 text-xs italic mt-2">{{ errors.email }}</p>{% endif %} #}
        </div>
        <div class="mb-6">
          <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
          <input type="password" id="password" name="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" />
          {# Client-side validation for password would be added here via JavaScript #}
          {# {% if errors.password %}<p class="text-red-500 text-xs italic mt-2">{{ errors.password }}</p>{% endif %} #}
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
          Login
        </button>
        {# {% if authError %}<p class="text-red-500 text-xs italic mt-4 text-center">{{ authError }}</p>{% endif %} #}
        <p class="text-center text-gray-600 text-sm mt-4">First time user? <a href="/signup" class="text-blue-500 hover:text-blue-800">Sign up</a></p>
      </form>
    </div>
    {% include 'footer.html.twig' %}
</div>