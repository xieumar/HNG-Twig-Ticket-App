<script src="https://cdn.tailwindcss.com"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% include 'navbar.html.twig' with {'is_logged_in': is_logged_in} %}
{% if success %}
    <div class="fixed top-0 left-1/2 transform -translate-x-1/2 z-50 w-fit mt-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline">{{ success }}</span>
    </div>
{% endif %}
{% if error %}
    <div class="fixed top-0 left-1/2 transform -translate-x-1/2 z-50 w-fit mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline">{{ error }}</span>
    </div>
{% endif %}
<div class="relative overflow-hidden flex flex-col min-h-screen bg-white">
    <style>
        .hero-circle {
          position: absolute;
          border-radius: 50%;
          background: rgba(173, 216, 230, 0.1); /* Pale blue with transparency */
          animation: float 15s ease-in-out infinite;
        }
      .hero-circle-1 {
        width: 100px;
        height: 100px;
        top: 20%;
        left: 10%;
        animation-delay: 0s;
      }

      .hero-circle-2 {
        width: 150px;
        height: 150px;
        top: 70%;
        left: 80%;
        animation-delay: 5s;
      }

      .hero-circle-3 {
        width: 80px;
        height: 80px;
        top: 50%;
        left: 30%;
        animation-delay: 10s;
      }

      .hero-circles-wrapper {
        transform: translateZ(0);
      }

      @keyframes float {
        0% {
          transform: translateY(0px) translateX(0px);
        }
        50% {
          transform: translateY(-20px) translateX(20px);
        }
        100% {
          transform: translateY(0px) translateX(0px);
        }
      }
    </style>
    <div class="absolute inset-0 z-0 hero-circles-wrapper">
      <div class="hero-circle hero-circle-1"></div>
      <div class="hero-circle hero-circle-2"></div>
      <div class="hero-circle hero-circle-3"></div>
    </div>
    <div class="relative z-10 container mx-auto p-4 pt-20 mt-5"> {# Adjusted pt-20 and added mt-5 #}
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-4xl font-bold">Dashboard</h1>
        <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded shadow-md transition duration-300">
          Logout
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">Total Tickets</h2>
          <p class="text-4xl font-bold text-blue-600">{{ totalTickets }}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">Open Tickets</h2>
          <p class="text-4xl font-bold text-green-600">{{ openTickets }}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">In Progress Tickets</h2>
          <p class="text-4xl font-bold text-amber-600">{{ inProgressTickets }}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">Closed Tickets</h2>
          <p class="text-4xl font-bold text-gray-600">{{ closedTickets }}</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Tickets Status Over Time</h2>
          <div class="h-80">
            <canvas id="overTimeChart"></canvas>
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ticket Status Distribution</h2>
          <div class="h-80">
            <canvas id="statusDistributionChart"></canvas>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">All Tickets</h2>
        <ul class="divide-y divide-gray-200">
          {% if tickets is empty %}
            <li class="py-4 text-gray-600">No tickets found.</li>
          {% else %}
            {% for ticket in tickets %}
              {% include 'ticket_item.html.twig' with {'ticket': ticket} %}
            {% endfor %}
          {% endif %}
        </ul>
      </div>
    </div>
    {% include 'footer.html.twig' %}
</div>

<script>
  // Sample data - in a real app, this would come from Twig variables passed from PHP
  const overTimeChartData = {
    labels: {{ overTimeLabels | json_encode() | raw }},
    datasets: [
      {
        label: 'Open Tickets',
        backgroundColor: '#22C55E',
        data: {{ overTimeOpenData | json_encode() | raw }},
      },
      {
        label: 'In Progress Tickets',
        backgroundColor: '#F59E0B',
        data: {{ overTimeInProgressData | json_encode() | raw }},
      },
    ],
  };

  const overTimeChartOptions = {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        display: true,
        position: 'top',
        labels: {
          color: '#4B5563',
        },
      },
      tooltip: {
        backgroundColor: '#333',
        titleColor: '#fff',
        bodyColor: '#fff',
        borderColor: '#666',
        borderWidth: 1,
        cornerRadius: 4,
      },
    },
    scales: {
      x: {
        stacked: true,
        grid: {
          display: false,
        },
        ticks: {
          color: '#6B7280',
        },
      },
      y: {
        stacked: true,
        beginAtZero: true,
        ticks: {
          precision: 0,
          color: '#6B7280',
        },
        grid: {
          color: '#E5E7EB',
        },
      },
    },
  };

  const statusDistributionData = {
    labels: ['Open', 'In Progress', 'Closed'],
    datasets: [
      {
        backgroundColor: ['#22C55E', '#F59E0B', '#6B7280'],
        data: {{ statusDistributionData | json_encode() | raw }},
      },
    ],
  };

  const statusDistributionOptions = {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        position: 'bottom',
        labels: {
          color: '#4B5563',
        },
      },
      tooltip: {
        backgroundColor: '#333',
        titleColor: '#fff',
        bodyColor: '#fff',
        borderColor: '#666',
        borderWidth: 1,
        cornerRadius: 4,
      },
    },
  };

  document.addEventListener('DOMContentLoaded', function() {
    const overTimeChartCtx = document.getElementById('overTimeChart');
    if (overTimeChartCtx) {
        new Chart(overTimeChartCtx, {
            type: 'bar',
            data: overTimeChartData,
            options: overTimeChartOptions,
        });
    }

    const statusDistributionCtx = document.getElementById('statusDistributionChart');
    if (statusDistributionCtx) {
        new Chart(statusDistributionCtx, {
            type: 'doughnut',
            data: statusDistributionData,
            options: statusDistributionOptions,
        });
    }
  });
</script>