  .hero-circle-3 {
    width: 80px;
    height: 80px;
    top: 50%;
    left: 30%;
    animation-delay: 10s;
  }

  .hero-circles-wrapper {
    transform: translateZ(0);
  }

  @keyframes float {
    0% {
      transform: translateY(0px) translateX(0px);
    }
