<style>
  .hero-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(173, 216, 230, 0.1); /* Pale blue with transparency */
    animation: float 15s ease-in-out infinite;
  }

  .hero-circle-1 {
    width: 100px;
    height: 100px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
